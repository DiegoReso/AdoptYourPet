<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%-include ('partials/head.ejs')  %>
</head>
<body>
  <%-include ('partials/nav.ejs')  %>
  
  
  <div id="wrapper-all">
    <h2><%= title%></h2>
    <form action="/register" method="POST">
      <div>
     <label for="name">Nome</label>
     <input type="text" name="name" id="name" placeholder="Nome do Pet" required>
   </div>
   <div>
     <label for="age">Idade</label>
     <input type="text" name="age" id="age" placeholder="Idade do Pet" required>
   </div>
   <div>
     <label for="pet">Pet</label>
     <input type="text" name="pet" id="pet" placeholder="Ex.: gato | cachorro | papagaio" required>
   </div>
   <div>
     <label for="password">Senha</label>
     <input type="password" name="password" id="password" placeholder="Digite sua senha" required>
   </div>
   <div>
     <button type="submit">Cadastrar</button>
   </div>
   <% if(typeof message  !==  'undefined'){%>
    <div id="wrapper-message"><%=message%></div>
    <% } %>
  
     </form>
 </div>

 <%-include ('partials/footer.ejs')  %>
</body>
</html>